  trigger_check:
    if:
      - {{ pr.title | capture(regex=r/test/) }}
    run:
      - action: add-label@v1
        args:
          label: "test :)"

  test_comment:
    on:
      - commit
    if:
      - true
    run:
      - action: add-comment@v1
        args:
          comment: {{ branch.num_of_commits }}

  approve_and_merge_audit_fix_prs:
    if:
      - {{ branch.name | includes(term="merge") }}
    run:
      - action: approve@v1
      - action: add-label@v1
        args:
          label: 'auto-approved'
          color: '008000'
      - action: merge@v1

