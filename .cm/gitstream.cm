# -*- mode: yaml -*-
# This example configuration for provides basic automations to get started with gitStream.
# View the gitStream quickstart for more examples: https://docs.gitstream.cm/quick-start/

-*- mode: yaml -*-

manifest:
  version: 1.0

automations:
  label_copilot_pr:
    # Look for the comment 'Generated by Copilot' in the added code
    if:
      - {{ source.diff.files | matchDiffLines(regex=copilot-comment, ignoreWhiteSpaces=true) | every }}
    run:
      - action: add-label@v1
        args:
          label: 'ðŸ¤– Copilot'

copilot-comment: "r/^\+.*Generated by Copilot/"
  
