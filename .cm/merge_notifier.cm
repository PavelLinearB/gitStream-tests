# -*- mode: yaml -*-
manifest:
  version: 1.0

triggers:
  on:
    - pr_created
    - commit

automations:
  merger:
    if:
      - true
    run:
      - action: send-http-request@v1
        args:
          url: {{ env.SLACK_KEY }}
          method: "POST"
          body: '{"text": "*{{ pr.author }}* merged to *{{ repo.name }}*: {{ pr.url }} - {{ pr.source }} :merged: \n changelog: {{CHANGELOG}} "}'

CHANGELOG: {{ source | askLBChangeLog(description=pr.description) | decode }}
